<div class="wrapper">
  <div class="header">
    <%= render "shared/header" %>
  </div>

  <div class="main">
    <div class="side-bar">
      <%= render "shared/side_bar" %>
    </div>

    <div>
      <div class="messages">
        <div class="topic">
          <p><%= @community.name %></p>
        </div>
        <div id='messages'>
          <%= render partial: 'message', collection: @messages %>
        </div>
      </div>

      <%= form_with model: [@community, @message], class: 'form', data: { behavior: 'community_speaker' } do |f| %>
        <div class="form-input">
          <%= f.text_field :content, class: 'form-message', placeholder: 'message' %>
        </div>
        <%= f.submit '送信', class: 'form-submit' %>
      <% end %>

    </div>
  </div>
</div>